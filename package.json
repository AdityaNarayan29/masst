{
  "name": "masst",
  "private": true,
  "description": "Masst - A modern development ecosystem featuring UI components, CLI tools, and more",
  "repository": {
    "type": "git",
    "url": "https://github.com/AdityaNarayan29/masst.git"
  },
  "author": "Aditya Narayan",
  "license": "MIT",
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "dev:landing": "turbo run dev --filter=@masst/landing",
    "dev:ui-landing": "turbo run dev --filter=@masst/ui-landing",
    "dev:playground": "turbo run dev --filter=playground",
    "lint": "turbo run lint",
    "lint:fix": "turbo run lint -- --fix",
    "test": "turbo run test",
    "test:watch": "turbo run test:watch",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "check-types": "turbo run check-types",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "changeset": "changeset",
    "version-packages": "changeset version",
    "release": "pnpm build && changeset publish",
    "storybook": "pnpm --filter @masst/ui storybook",
    "build-storybook": "pnpm --filter @masst/ui build-storybook"
  },
  "devDependencies": {
    "@changesets/cli": "^2.28.1",
    "@eslint/eslintrc": "^3",
    "@tailwindcss/postcss": "^4.1.7",
    "@types/node": "^20.17.50",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "autoprefixer": "^10.4.21",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.1",
    "eslint-plugin-prettier": "^5.4.1",
    "postcss": "^8.5.3",
    "prettier": "^3.5.3",
    "tailwindcss": "^4.1.7",
    "turbo": "^2.5.3",
    "typescript": "5.8.2"
  },
  "packageManager": "pnpm@9.15.4",
  "engines": {
    "node": ">=18"
  },
  "type": "module"
}
